%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue_items.each do |item|
              %tr
                %td= item.order
                %td
                  = link_to item.display_title, video_path(item.video)
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td= item.rating
                %td
                  = link_to item.display_genre, category_path(item.video.category) 
                %td
                  = link_to queue_item_path(item), method: :delete do
                    %i.glyphicon.glyphicon-remove
        = button_to "Update Instant Queue", nil, class: "btn btn-default"
