%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: 'signin'  do |f|
        %header
          %h1 Sign in
        %fieldset
          = f.email_field :email, placeholder: 'name@example.com', label: 'Email Address'
          = f.password_field :password
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")