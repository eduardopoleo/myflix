%section#top-header.row
  %h1.col-md-1
    = link_to "MyFLiX"
  - if logged_in? 
    %ul.col-md-5.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "My Queue"
      %li= link_to "People", user_followings_path(current_user) 
      %li= link_to "Invite", invite_friend_path 
      - if current_user.admin?
        %li= link_to "Add Video", new_admin_videos_path
    = form_tag search_videos_path, class: "col-md-5 navbar-form" do
      .form-group
        %input.form-control(type="text" name="search_word" placeholder="Search for videos here")
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to 'Sign Out', signout_path
